<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="Create topic tables" author="pim">
        <comment>Create topic tables</comment>
        <createTable tableName="android_phone_battery_level">
            <column name="timestamp" type="DATETIME"/>
            <column name="projectId" type="VARCHAR">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="userId" type="VARCHAR">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="sourceId" type="VARCHAR">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="time" type="DATETIME">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="timeReceived" type="DATETIME"/>
            <column name="batteryLevel" type="INT"/>
            <column name="isPlugged" type="boolean"/>
            <column name="status" type="VARCHAR"/>
        </createTable>

        <createTable tableName="android_phone_relative_location">
            <column name="timestamp" type="DATETIME"/>
            <column name="projectId" type="VARCHAR">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="userId" type="VARCHAR">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="sourceId" type="VARCHAR">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="time" type="DATETIME">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="timeReceived" type="DATETIME"/>
            <column name="offsetReference" type="INT"/>
            <column name="provider" type="VARCHAR"/>
            <column name="latitude" type="DOUBLE"/>
            <column name="longitude" type="DOUBLE"/>
            <column name="altitude" type="INT"/>
            <column name="accuracy" type="INT"/>
            <column name="speed" type="INT"/>
            <column name="bearing" type="INT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
